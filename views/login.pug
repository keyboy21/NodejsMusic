extends layout

block content 
    h1.mb-5 #{title}
    form(method="POST", action="/login")
        .form-group
            label(for='name') Foydalanuvchini laqabi 
            input#name.form-control(type='text', name="username", aria-describedby='emailHelp')
        .form-group
            label(for='singer') Parol
            input#singer.form-control(type='password', name="password")
        button.btn.btn-success(type='submit') Tizimga kir
